<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Librarian.ViewModels"
                    xmlns:v="clr-namespace:Librarian.Views">
    <DataTemplate DataType="{x:Type vm:BooksViewModel}">
        <v:BooksView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:BuyersViewModel}">
        <v:BuyersView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:StatisticViewModel}">
        <v:StatisticView DataContext="{Binding}"/>
    </DataTemplate>
</ResourceDictionary>