<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Librarian.ViewModels"
                    xmlns:v="clr-namespace:Librarian.Views">
    <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
        <v:DashboardView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
        <v:ProductsView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:EmployeesViewModel}">
        <v:EmployeesView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:CustomersViewModel}">
        <v:CustomersView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:OrdersViewModel}">
        <v:OrdersView DataContext="{Binding}"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:StatisticsViewModel}">
        <v:StatisticView DataContext="{Binding}"/>
    </DataTemplate>
</ResourceDictionary>